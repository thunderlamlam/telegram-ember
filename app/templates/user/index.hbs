{{#each dcpost in controller itemController="post"}}
  <div class=dcontent6>
    <p>{{#link-to "user" dcpost.author.id activeClass="selected"}}<img {{bind-attr src=dcpost.author.profileImage}} height="40" width="40"> 
      {{dcpost.author.name}}{{/link-to}}
    </p>
    {{dcpost.body}}

    <p> {{dcpost.prettydate}} 
      {{#if isSelf}}
      <button type="submit" class="Remove-button" {{action 'remove' dcpost}}>Delete</button>
      {{/if}}
    </p>
  </div>
{{/each}}